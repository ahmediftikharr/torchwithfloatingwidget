<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">

    <corners android:radius="@dimen/thumb_size_half"/>

    <gradient android:type="linear"
        android:angle="180"
        android:endColor="#40000000"
        android:startColor="#80000000"/>

</shape>

</item>


    <item android:bottom="@dimen/switch_background_stroke"
        android:right="@dimen/switch_background_stroke"
        android:top="@dimen/switch_background_stroke"
        android:left="@dimen/switch_background_stroke">


    <shape android:shape="rectangle">

    <corners android:radius="@dimen/thumb_size_half"/>

    <solid android:color="#151515"/>

</shape>

</item>

</layer-list>